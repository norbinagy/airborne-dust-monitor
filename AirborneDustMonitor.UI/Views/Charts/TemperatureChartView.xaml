<UserControl x:Class="AirborneDustMonitor.UI.Views.Charts.TemperatureChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf">
    <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
        <StackPanel>
            <TextBlock Text="Hőmérséklet" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
            <oxy:PlotView Model="{Binding PlotModel}" Height="250"/>
        </StackPanel>
    </Border>
</UserControl>
